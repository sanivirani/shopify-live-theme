<section class="custom-carousel-section page-width">
  <div class="custom-carousel-header">
    <h2>{{ section.settings.heading | escape }}</h2>
  </div>

  <div class="custom-carousel-wrapper swiper">
    <div class="swiper-wrapper">
      {% for product in collections[section.settings.collection].products limit: section.settings.limit %}
        <div class="swiper-slide custom-carousel-item">
          <a href="{{ product.url }}" class="custom-carousel-link">
            <div class="carousel-image-wrapper">
              <img
                src="{{ product.featured_image | image_url: width: 400 }}"
                alt="{{ product.title | escape }}"
                class="custom-carousel-image"
              >
              {% if product.compare_at_price > product.price %}
                <span class="sale-badge">Sale</span>
              {% endif %}
            </div>
            <h3 class="custom-carousel-title">{{ product.title }}</h3>
            <p class="custom-carousel-price">
              {{ product.price | money }}
              {% if product.compare_at_price > product.price %}
                <span class="compare-price">{{ product.compare_at_price | money }}</span>
              {% endif %}
            </p>

            {% if product.options_with_values.size > 0 %}
              <div class="variant-swatches">
                {% for option in product.options_with_values %}
                  {% if option.name contains 'Color' %}
                    <ul class="swatches">
                      {% for value in option.values %}
                        <li class="swatch" title="{{ value }}">
                          <span style="background-color: {{ value | downcase | replace: ' ', '' }};"></span>
                        </li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                {% endfor %}
              </div>
            {% endif %}
          </a>
        </div>
      {% endfor %}
    </div>

    <!-- Navigation Buttons -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>

  <!-- Swiper CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
  <style>
            .custom-carousel-section {
              margin-top: 4rem;
              margin-bottom: 4rem;
            }

            .custom-carousel-wrapper {
              position: relative;
            }

            .custom-carousel-header h2 {
            font-family: "Gowang Batang", serif;
            font-size: 34px;
            margin-bottom: 1.5rem;
            color: #23262f  
          }

            .swiper-slide {
              width: 220px;
              text-align: center;
            }

            .carousel-image-wrapper {
              position: relative;
            }

            .custom-carousel-image {
              width: 100%;
              border-radius: 8px;
            }

            .sale-badge {
              position: absolute;
              top: 20px;
              left: 15px;
              background: #721c37;
              color: white;
              font-size: 1rem;
              padding: 5px 10px;
              border-radius: 4px;
            }

           .custom-carousel-title {
            font-family: "Inter", sans-serif;
            color : #3e3e59;
            font-size: 14px;
            margin-top: 1rem;
            margin-bottom: 5px; 
            text-align : start; 
        }

            .custom-carousel-price {
              font-size: 13px;
              color: #3e3e59;
              text-align: start;
              margin-top: inherit;
            }

            .compare-price {
              text-decoration: line-through;
              color: #3e3e59;
              font-size: 13px;
              margin-left: 6px;
              
            }

            .custom-carousel-section
            .variant-swatches {
              margin-top: 6px;
            }

            .custom-carousel-section
            .swatches {
              display: flex;
              justify-content: start;
              gap: 20px;
              padding: 0;
              list-style: none;
            }

            .custom-carousel-section
            .swatch span {
              display: block;
              width: 40px;
              height: 40px;
              border: 1px solid #ccc;
              border-radius: 50%;
            }

            .custom-carousel-section
            .swiper-button-prev,
            .swiper-button-next {
              color: #721c37;
            }

            /* .custom-carousel-section
            .swiper-button-prev {
              left
            } */

    
  </style>

  <!-- Swiper JS -->
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      new Swiper(".custom-carousel-wrapper.swiper", {
        slidesPerView: 1.2,
        spaceBetween: 16,
        navigation: {
          nextEl: ".swiper-button-next",
          prevEl: ".swiper-button-prev",
        },
        breakpoints: {
          640: { slidesPerView: 2.2 },
          768: { slidesPerView: 3.2 },
          1024: { slidesPerView: 4 },
        },
      });
    });
  </script>
</section>

{% schema %}
{
  "name": "Custom Carousel",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "limit",
      "label": "Products to show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 5
    }
  ],
  "presets": [
    {
      "name": "Custom Carousel",
      "category": "Custom"
    }
  ]
}

{% endschema %}
