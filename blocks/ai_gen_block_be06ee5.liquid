    },
    {
      "type": "range",
      "id": "margin",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Margin",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Divider"
    }
  ]
}
{% endschema %}