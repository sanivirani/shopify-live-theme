{% doc %}
  @prompt
    make product title and typo layout is 
    font-family: Gowun Batang;
    font-weight: 700;
    font-style: Bold;
    font-size: 34px;
    leading-trim: NONE;
    line-height: 38px;
    letter-spacing: -0.6px;
    text-transform: lowercase;, give me all settings for padding , margin , font family ,

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  @import url('https://fonts.googleapis.com/css2?family=Gowun+Batang:wght@400;700&display=swap');

  .ai-product-title-container-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_right }}px {{ block.settings.padding_bottom }}px {{ block.settings.padding_left }}px;
    margin: {{ block.settings.margin_top }}px {{ block.settings.margin_right }}px {{ block.settings.margin_bottom }}px {{ block.settings.margin_left }}px;
  }

  .ai-product-title-{{ ai_gen_id }} {
    {% case block.settings.font_family %}
      {% when 'gowun_batang' %}
        font-family: 'Gowun Batang', serif;
      {% when 'arial' %}
        font-family: Arial, sans-serif;
      {% when 'helvetica' %}
        font-family: Helvetica, Arial, sans-serif;
      {% when 'georgia' %}
        font-family: Georgia, serif;
      {% when 'times' %}
        font-family: 'Times New Roman', Times, serif;
      {% when 'courier' %}
        font-family: 'Courier New', Courier, monospace;
      {% when 'verdana' %}
        font-family: Verdana, Geneva, sans-serif;
      {% when 'trebuchet' %}
        font-family: 'Trebuchet MS', Helvetica, sans-serif;
      {% when 'palatino' %}
        font-family: 'Palatino Linotype', 'Book Antiqua', Palatino, serif;
      {% when 'impact' %}
        font-family: Impact, Charcoal, sans-serif;
      {% when 'comic_sans' %}
        font-family: 'Comic Sans MS', cursive;
      {% when 'lucida' %}
        font-family: 'Lucida Sans Unicode', 'Lucida Grande', sans-serif;
      {% when 'tahoma' %}
        font-family: Tahoma, Geneva, sans-serif;
      {% when 'system' %}
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      {% else %}
        font-family: 'Gowun Batang', serif;
    {% endcase %}
    
    font-weight: {{ block.settings.font_weight }};
    font-style: {{ block.settings.font_style }};
    font-size: {{ block.settings.font_size }}px;
    line-height: {{ block.settings.line_height }}px;
    letter-spacing: {{ block.settings.letter_spacing }}px;
    text-transform: {{ block.settings.text_transform }};
    color: {{ block.settings.text_color }};
    text-align: {{ block.settings.text_alignment }};
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-product-title-container-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top_mobile }}px {{ block.settings.padding_right_mobile }}px {{ block.settings.padding_bottom_mobile }}px {{ block.settings.padding_left_mobile }}px;
      margin: {{ block.settings.margin_top_mobile }}px {{ block.settings.margin_right_mobile }}px {{ block.settings.margin_bottom_mobile }}px {{ block.settings.margin_left_mobile }}px;
    }

    .ai-product-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size_mobile }}px;
      line-height: {{ block.settings.line_height_mobile }}px;
      letter-spacing: {{ block.settings.letter_spacing_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-product-title-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <h1 class="ai-product-title-{{ ai_gen_id }}">
    {% if block.settings.custom_title != blank %}
      {{ block.settings.custom_title }}
    {% else %}
      {{ product.title }}
    {% endif %}
  </h1>
</div>

