{% style %}
.custom-accordion-wrapper {
  border-radius: 12px;
  background-color: #fafafa;
  border: 1px solid #e3e3e3;
  font-family: inherit;
  padding: 2rem 4rem;
  max-width: 1200px;
  margin: 0 auto;
  margin-bottom : 5rem;
}

.accordion-section-header {
  text-align: center;
  margin-bottom: 2rem;
  padding: 0 1rem;
}

.accordion-title {
  font-size: 2rem;
  font-weight: 700;
  color: #111;
  margin-bottom: 0.4rem;
}

.accordion-subtitle {
  font-size: 1rem;
  color: #666;
  max-width: 600px;
  margin: 0 auto;
}

.accordion-item {
  border-bottom: 1px solid #e3e3e3;
  transition: all 0.3s ease;
}

.accordion-item:last-child {
  border-bottom: none;
}

.accordion-item summary {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 1.2rem;
  cursor: pointer;
  font-weight: 600;
  list-style: none;
  background: #fff;
  transition: background 0.3s ease;
}

.accordion-item[open] summary {
  background: #f0f0f0;
}

.accordion-item summary:hover {
  background: #f9f9f9;
}

.accordion-icon {
  width: 20px;
  height: 20px;
  flex-shrink: 0;
  transform: rotate(0deg);
  transition: transform 0.3s ease;
}

.accordion-item[open] .accordion-icon {
  transform: rotate(180deg);
}

.accordion-content {
  padding: 0 2.4rem 1rem;
  font-size: 0.95rem;
  color: #333;
}

/* Responsive Styles */
@media (max-width: 1024px) {
  .custom-accordion-wrapper {
    padding: 2rem;
  }
  .accordion-title {
    font-size: 1.6rem;
  }
}

@media (max-width: 768px) {
  .custom-accordion-wrapper {
    padding: 1.5rem 1rem;
  }
  .accordion-title {
    font-size: 1.4rem;
  }
  .accordion-subtitle {
    font-size: 0.95rem;
  }
  .accordion-content {
    font-size: 0.9rem;
  }
}

@media (max-width: 480px) {
  .accordion-item summary {
    font-size: 0.95rem;
    padding: 1rem;
  }
  .accordion-icon {
    width: 16px;
    height: 16px;
  }
}
{% endstyle %}
